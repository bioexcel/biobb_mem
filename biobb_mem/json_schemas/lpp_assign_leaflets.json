                }
            ]
        },
        "input_traj_path": {
            "type": "string",
            "description": "Path to the input trajectory to be processed",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_mem/raw/main/biobb_mem/test/data/A01JD/A01JD.xtc",
            "enum": [
                ".*\\.arc$",
                ".*\\.crd$",
                ".*\\.dcd$",
                ".*\\.ent$",
                ".*\\.gro$",
                ".*\\.inpcrd$",
                ".*\\.mdcrd$",
                ".*\\.mol2$",
                ".*\\.nc$",
                ".*\\.pdb$",
                ".*\\.pdbqt$",
