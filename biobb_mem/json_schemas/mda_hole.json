{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://bioexcel.eu/biobb_mem/json_schemas/1.0/mda_hole",
    "name": "biobb_mem MDAHole",
    "title": "Wrapper of the MDAnalysis HOLE module for analyzing ion channel pores or transporter pathways.",
    "description": "MDAnalysis HOLE provides an interface to the HOLE suite of tools to analyze pore dimensions and properties along a channel or transporter pathway. The parameter names and defaults follow the MDAnalysis HOLE  implementation.",
    "type": "object",
    "info": {
        "wrapped_software": {
            "name": "MDAnalysis",
            "version": "2.7.0",
            "license": "GNU"
        },
        "ontology": {
            "name": "EDAM",
            "schema": "http://edamontology.org/EDAM.owl"
        }
    },
    "required": [
        "input_top_path",
        "input_traj_path",
        "output_hole_path",
        "output_csv_path"
    ],
    "properties": {
        "input_top_path": {
            "type": "string",
            "description": "Path to the input structure or topology file",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_mem/raw/main/biobb_mem/test/data/A01JD/A01JD.pdb",
            "enum": [
                ".*\\.crd$",
                ".*\\.gro$",
                ".*\\.mdcrd$",
                ".*\\.mol2$",
                ".*\\.pdb$",
                ".*\\.pdbqt$",
                ".*\\.prmtop$",
                ".*\\.psf$",
                ".*\\.top$",
                ".*\\.tpr$",
                ".*\\.xml$",
                ".*\\.xyz$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.crd$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.gro$",
                    "description": "Path to the input structure or topology file",
                    "edam": "2033"
                },
                {
                    "extension": ".*\\.mdcrd$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.mol2$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3816"
                },
                {
                    "extension": ".*\\.pdb$",
                    "description": "Path to the input structure or topology file",
                    "edam": "1476"
                },
                {
                    "extension": ".*\\.pdbqt$",
                    "description": "Path to the input structure or topology file",
                    "edam": "1476"
                },
                {
                    "extension": ".*\\.prmtop$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3881"
                },
                {
                    "extension": ".*\\.psf$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3882"
                },
                {
                    "extension": ".*\\.top$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3881"
                },
                {
                    "extension": ".*\\.tpr$",
                    "description": "Path to the input structure or topology file",
                    "edam": "2333"
                },
                {
                    "extension": ".*\\.xml$",
                    "description": "Path to the input structure or topology file",
                    "edam": "2332"
                },
                {
                    "extension": ".*\\.xyz$",
                    "description": "Path to the input structure or topology file",
                    "edam": "3887"
                }
            ]
        },
        "input_traj_path": {
            "type": "string",
            "description": "Path to the input trajectory to be processed",
            "filetype": "input",
            "sample": "https://github.com/bioexcel/biobb_mem/raw/main/biobb_mem/test/data/A01JD/A01JD.xtc",
            "enum": [
                ".*\\.arc$",
                ".*\\.crd$",
                ".*\\.dcd$",
                ".*\\.ent$",
                ".*\\.gro$",
                ".*\\.inpcrd$",
                ".*\\.mdcrd$",
                ".*\\.mol2$",
                ".*\\.nc$",
                ".*\\.pdb$",
                ".*\\.pdbqt$",
                ".*\\.restrt$",
                ".*\\.tng$",
                ".*\\.trr$",
                ".*\\.xtc$",
                ".*\\.xyz$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.arc$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "2333"
                },
                {
                    "extension": ".*\\.crd$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.dcd$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.ent$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "1476"
                },
                {
                    "extension": ".*\\.gro$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "2033"
                },
                {
                    "extension": ".*\\.inpcrd$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.mdcrd$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3878"
                },
                {
                    "extension": ".*\\.mol2$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3816"
                },
                {
                    "extension": ".*\\.nc$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3650"
                },
                {
                    "extension": ".*\\.pdb$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "1476"
                },
                {
                    "extension": ".*\\.pdbqt$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "1476"
                },
                {
                    "extension": ".*\\.restrt$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3886"
                },
                {
                    "extension": ".*\\.tng$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3876"
                },
                {
                    "extension": ".*\\.trr$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3910"
                },
                {
                    "extension": ".*\\.xtc$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3875"
                },
                {
                    "extension": ".*\\.xyz$",
                    "description": "Path to the input trajectory to be processed",
                    "edam": "3887"
                }
            ]
        },
        "output_hole_path": {
            "type": "string",
            "description": "Path to the output HOLE analysis results",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_mem/raw/main/biobb_mem/test/reference/mdanalysis_biobb/hole.vmd",
            "enum": [
                ".*\\.vmd$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.vmd$",
                    "description": "Path to the output HOLE analysis results",
                    "edam": "format_2330"
                }
            ]
        },
        "output_csv_path": {
            "type": "string",
            "description": "Path to the output CSV file containing the radius and coordinates of the pore",
            "filetype": "output",
            "sample": "https://github.com/bioexcel/biobb_mem/raw/main/biobb_mem/test/reference/mdanalysis_biobb/hole_profile.csv",
            "enum": [
                ".*\\.csv$"
            ],
            "file_formats": [
                {
                    "extension": ".*\\.csv$",
                    "description": "Path to the output CSV file containing the radius and coordinates of the pore",
                    "edam": "format_3752"
                }
            ]
        },
        "properties": {
            "type": "object",
            "properties": {
                "start": {
                    "type": "integer",
                    "default": null,
                    "wf_prop": false,
                    "description": "Starting frame for slicing."
                },
                "stop": {
                    "type": "integer",
                    "default": null,
                    "wf_prop": false,
                    "description": "Ending frame for slicing."
                },
                "steps": {
                    "type": "integer",
                    "default": null,
                    "wf_prop": false,
                    "description": "Step for slicing."
                },
                "executable": {
                    "type": "string",
                    "default": "hole",
                    "wf_prop": false,
                    "description": "Path to the HOLE executable."
                },
                "select": {
                    "type": "string",
                    "default": "protein",
                    "wf_prop": false,
                    "description": "The selection string to create an atom selection that the HOLE analysis is applied to."
                },
                "cpoint": {
                    "type": "array",
                    "default": null,
                    "wf_prop": false,
                    "description": "Coordinates of a point inside the pore (\u00c5). If None, tries to guess based on the geometry."
                },
                "cvect": {
                    "type": "array",
                    "default": null,
                    "wf_prop": false,
                    "description": "Search direction vector. If None, tries to guess based on the geometry."
                },
                "sample": {
                    "type": "number",
                    "default": 0.2,
                    "wf_prop": false,
                    "description": "Distance of sample points in \u00c5. This value determines how many points in the pore profile are calculated."
                },
                "end_radius": {
                    "type": "number",
                    "default": 22.0,
                    "wf_prop": false,
                    "description": "Radius in \u00c5, which is considered to be the end of the pore."
                },
                "dot_density": {
                    "type": "integer",
                    "default": 15,
                    "wf_prop": false,
                    "description": "Density of facets for generating a 3D pore representation.",
                    "min": 5,
                    "max": 35
                },
                "remove_tmp": {
                    "type": "boolean",
                    "default": true,
                    "wf_prop": true,
                    "description": "Remove temporal files."
                },
                "restart": {
                    "type": "boolean",
                    "default": false,
                    "wf_prop": true,
                    "description": "Do not execute if output files exist."
                },
                "sandbox_path": {
                    "type": "string",
                    "default": "./",
                    "wf_prop": true,
                    "description": "Parent path to the sandbox directory."
                }
            }
        }
    },
    "additionalProperties": false
}